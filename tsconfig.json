{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "Decorators", "ESNext"],
    "experimentalDecorators": true,
    "strict": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "useDefineForClassFields": false,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["core/*", "core/component/*"],
      "@app/*": ["app/*"]
    }
  }
}
